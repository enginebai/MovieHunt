<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_12"
    android:background="@color/cardBackground"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPoster"
        android:layout_width="0dp"
        android:layout_height="@dimen/poster_height"
        app:cardCornerRadius="@dimen/corner_small"
        app:layout_constraintDimensionRatio="9:16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimary" />
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_bookmark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutContent"
        android:id="@+id/buttonBookmark"
        android:background="?selectableItemBackground"
        />

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_12"
        android:layout_marginEnd="@dimen/size_4"
        android:layout_marginTop="@dimen/size_4"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/buttonBookmark"
        app:layout_constraintStart_toEndOf="@+id/cardPoster"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/textTitle"
            style="@style/Headline6"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Star Wars: IV" />


        <TextView
            android:id="@+id/textDuration"
            style="@style/Caption"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_12"
            android:drawablePadding="@dimen/size_4"
            tools:text="2h 14m"
            app:drawableStartCompat="@drawable/clock" />

        <TextView
            style="@style/Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textReleaseYearAndGenre"
            android:layout_marginTop="@dimen/size_8"
            tools:text="2022 Action, Adventure"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="horizontal">
            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/CustomRatingBar"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/RatingBar" />
            <TextView
                style="@style/Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/size_4"
                android:id="@+id/textRating"
                tools:text="9.5"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>